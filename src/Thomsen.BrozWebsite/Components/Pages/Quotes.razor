@page "/quotes"
@rendermode InteractiveServer

@using Thomsen.BrozWebsite.Repository

@inject IQuotesRepository _quotesRepository

<PageTitle>Quotes</PageTitle>

@if (_quotes is null) {
    <p><em>Loading...</em></p>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>Author</th>
                <th>Quote</th>
                <th>Date</th>
                <th>Visibility</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quote in _quotes) {
                <tr>
                    <td>@quote.Author</td>
                    <td>@quote.Text</td>
                    <td>@quote.Date</td>
                    <td>@quote.Visibility</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<Quote>? _quotes;

    protected override async Task OnInitializedAsync() {
        _quotes = await _quotesRepository.GetAllQuotesAsync();
    }
}