@page "/quotes/delete"
@attribute [Authorize(Roles = "Admin,Editor")]
@rendermode InteractiveServer

<PageTitle>Delete Quote</PageTitle>

<h3>Are you sure you want to delete this quote?</h3>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Author:</dt>
        <dd class="col-sm-10">@Quote.Author</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">Quote:</dt>
        <dd class="col-sm-10">@Quote.Text</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">Date:</dt>
        <dd class="col-sm-10">@Quote.Date</dd>
    </dl>
</div>

<hr />

<EditForm Model="Quote" OnValidSubmit="OnValidSubmitAsync" FormName="delete" Enhance>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a class="btn btn-secondary" href="/quotes">Back</a>
</EditForm>
