@page "/"
@rendermode InteractiveServer

<PageTitle>Die BroZ</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <!-- Card 1: General Img -->
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card text-center m-2 w-100 h-100">
                <div class="card-header">
                    <h5 class="mb-0">Die BroZ</h5>
                </div>
                <img class="card-img-bottom" src="assets/logo_hq.png" alt="Logo" style="max-height: 400px; object-fit: contain;">
                <div class="card-body">
                    <p class="card-text">... weil auch im salzigsten Acker vielleicht irgendwo ein Blümchen erblüht.</p>
                </div>
            </div>
        </div>

        <!-- Card 2: Teamspeak 3 -->
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card text-center m-2 w-100 h-100">
                <div class="card-header">
                    <h5 class="mb-0">Teamspeak</h5>
                </div>
                <a href="teamspeak://ts3.the-wagner.de">
                    <img class="card-img mt-2" src="https://ts3index.com/banner/s410_262829.png" alt="Teamspeak Banner" style="max-height: 280px; object-fit: contain;">
                </a>
            </div>
        </div>

        <!-- Card 3: Spotify -->
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card text-center m-2 w-100 h-100">
                <div class="card-header">
                    <h5 class="mb-0">Playlist</h5>
                </div>
                <iframe class="card-img mt-2" style="border-radius:12px" src="https://open.spotify.com/embed/playlist/66mWuiFXvb3UsLH7QY60qi?utm_source=generator&theme=0" width="100%" height="100%" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
            </div>
        </div>

        <!-- Card 4: Quote Scores -->
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card text-center m-2 w-100 h-100">
                <div class="card-header">
                    <h5 class="mb-0">Quote Scores</h5>
                </div>
                <div class="card-body">
                    @foreach (var score in GeneralScores ?? []) {
                        <dl class="row m-0">
                            <dt class="col mb-0 text-start">@score.User:</dt>
                            <dd class="col mb-0 text-end">@score.Score</dd>
                        </dl>
                    }
                </div>
            </div>
        </div>

        <!-- Card 5: Konversation Quote Scores -->
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card text-center m-2 w-100 h-100">
                <div class="card-header">
                    <h5 class="mb-0">Konversation Quote Scores</h5>
                </div>
                <div class="card-body">
                    @foreach (var score in KonversationScores ?? []) {
                        <dl class="row m-0">
                            <dt class="col mb-0 text-start">@score.User:</dt>
                            <dd class="col mb-0 text-end">@score.Score</dd>
                        </dl>
                    }
                </div>
            </div>
        </div>
    </div>
</div>