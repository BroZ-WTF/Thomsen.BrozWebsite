@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-0 text-white position-relative">
            <div class="topbar-halves d-flex">
                <img src="assets/topbar_left_bw.png" alt="Left" class="topbar-half w-50" />
                <img src="assets/topbar_right_fr.png" alt="Right" class="topbar-half w-50 " />
            </div>

            <img src="assets/topbar_logo.png" alt="Logo" class="topbar-logo position-absolute top-50 start-50 translate-middle" />
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
